<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between pb-0">
        <div class="brand">
          <%= link_to "Simple Airbnb", flats_path %>
        </div>
        <div class="d-flex">
          <p class="btn btn-outline-primary mr-3"> <%= link_to "Add Flat", new_flat_path %></p>
          <form>
            <div class="form-group d-flex ">
              <input type="search" class="form-control" name="query" id="search" placeholder="search">
              <button type="submit" class="btn btn-primary mb-2">Search</button>
            </div>
          </form>
        </div>
    </nav>


      <%= yield %>

  </body>
</html>

