
<div class="show-banner" style="background-image: url('<%= @flat.picture_url %>')"> </div>

<div class="container">
  <div class="show-content">
    <div class="row">

      <div class="col-8">
        <div class="flat-name show-card">
          <h1> <%= @flat.name %></h1>
          <p> <%= @flat.address %> </p>
        </div>

        <div class="show-flat-description show-card">
          <h3> A bit more about this flat...</h3>
          <p> <%= @flat.description %> </p>
        </div>

      </div>

     <div class="col-4">
        <div class="show-card">
          <h4>Book this place !</h4>
          <form action="" method="">
            <div class="mt-3">
              <label for="date-begin">From: </label>
              <input type="date" name="date-begin" id="date-begin" required>
            </div>
            <div class="form-example">
              <label for="date-end">To: </label>
              <input type="date" name="date-end" id="date-end" required>
            </div>
            <div class="form-example">
              <input type="submit" value="Book!" class="btn btn-success btn-block mt-3">
            </div>
          </form>
        </div>

        <div class="show-card">
          <h4>Details</h4>
          <div class="d-flex ">
              <p><i class="fas fa-user-alt pr-2"> </i><%= @flat.price_per_night %></p>
              <p><i class="fas fa-euro-sign pr-2 pl-4"> </i><%= @flat.number_of_guests %></p>
          </div>
        </div>
        <div class="show-card share-card d-flex align-items-center justify-content-between">
          <h4>Share</h4>
          <div>
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-pinterest-square"></i>
            <i class="fas fa-envelope-square"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


